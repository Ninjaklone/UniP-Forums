<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="card-title h4 mb-0">Profile</h1>
                    <a href="/profile/edit" class="btn btn-primary btn-sm">Edit Profile</a>
                </div>
                <div class="card-body">
                    <% if (locals.success) { %>
                        <div class="alert alert-success" role="alert">
                            <%= success %>
                        </div>
                    <% } %>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Username:</strong>
                        </div>
                        <div class="col-sm-9">
                            <%= user.username %>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-sm-9">
                            <%= user.email %>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Member Since:</strong>
                        </div>
                        <div class="col-sm-9">
                            <%= new Date(user.createdAt).toLocaleDateString() %>
                        </div>
                    </div>

                    <hr>

                    <h5 class="mb-3">Activity Summary</h5>
                    <div class="row">
                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="card-title">Posts</h6>
                                    <p class="card-text display-6"><%= user.posts?.length || 0 %></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="card-title">Comments</h6>
                                    <p class="card-text display-6"><%= user.comments?.length || 0 %></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% if (user.posts && user.posts.length > 0) { %>
                        <h5 class="mb-3 mt-4">Recent Posts</h5>
                        <div class="list-group">
                            <% user.posts.slice(0, 5).forEach(post => { %>
                                <a href="/posts/<%= post._id %>" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1"><%= post.title %></h6>
                                        <small><%= new Date(post.createdAt).toLocaleDateString() %></small>
                                    </div>
                                    <p class="mb-1 text-truncate"><%= post.content %></p>
                                    <small><%= post.comments?.length || 0 %> comments</small>
                                </a>
                            <% }); %>
                        </div>
                        <% if (user.posts.length > 5) { %>
                            <div class="text-center mt-3">
                                <a href="/posts?user=<%= user._id %>" class="btn btn-outline-primary btn-sm">View All Posts</a>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div> 