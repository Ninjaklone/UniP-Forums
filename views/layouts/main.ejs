<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? `${title} - University Forums` : 'University Forums' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/themes.css">
    <link rel="stylesheet" href="/css/style.css">
    <%- typeof extraStyles !== 'undefined' ? extraStyles : '' %>
    <!-- TinyMCE -->
    <script src="https://cdn.tiny.cloud/1/oan9k4nofmh9oruntd60xxkt6zp86rrhw38x8xfcs1s2tl4k/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
</head>
<body>
    <%- include('../partials/header') %>

    <%- body %>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/theme.js"></script>
    <script src="/js/tinymce-config.js"></script>
    <%- typeof scripts !== 'undefined' ? scripts : '' %>
    <% if (locals.user) { %>
        <script src="/js/thread.js"></script>
        <script src="/js/forum.js"></script>
        <script src="/js/thread-form.js"></script>
        <% if (locals.user.is_admin) { %>
            <script src="/js/adminjs/users.js"></script>
        <% } %>
    <% } %>
</body>
</html> 